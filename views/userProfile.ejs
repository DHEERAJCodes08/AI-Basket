                            <button class="btn btn-outline-success" type="submit" id="AddBtn">Add</button>
                        </form>
                    </div>

                </div>


                <div class="container " style="width :500px">

                    <ul class="list-group" id="newul">
                        <!-- // Check if basketData exists and is an array before using forEach -->
                        <%if(Array.isArray(basket)){%>
                            <!-- Here if the Comming Basket is in the Form of array then check yhis -->
                            <% basket.forEach(function(basket) { %>
                                <form action="/removeBasket" method="post">
                                    <a href="/editbasket/<%=basket.basket_name%>/<%=basket.basket_id%>" >
                                        <li class="list-group-item d-flex justify-content-between">
                                            <h3 class="flex-grow-1">
                                                <%=basket.basket_name%>
                                            </h3>
                                            <!-- Here we are Just Storing the Basket id so that on click to this only this can be deleted -->
                                            <input type="hidden" name="basketId" value="<%= basket.basket_id %>">

                                            <!-- <button type="button" class="btn btn-warning mx-2" onclick="EditChapter(this)">Edit</button> -->
                                            <button type="submit" class="btn btn-danger">Remove</button>

                                        </li>
                                    </a>
                                </form>
                                <% }); %>

                                    <% } else { console.log("Nothing is here, Please add Something ðŸ’™âœ¨"); } %>




                    </ul>
                </div>


            </div>

        </section>


        <section class="sect-4">
            <div class="name-cont">
