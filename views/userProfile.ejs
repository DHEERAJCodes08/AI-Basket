                        <img src="<%= user.profileimg %>" width="180" height="180" alt=" User Profile">

                    </form>
                </label>
                <label for="profile">
                    <div class="cam_icon">
                        <i class="fi fi-rr-camera"></i>
                    </div>
                </label>
            </div>
        </section>


        <!-- Work -->
