<body>
    <!-- This is the Begning of the Code -->
    <!-- Update Profile Model -->
    <div class="ProfileUpdateModel">

        <input type="checkbox" id="click" style="display: none;">
        <label class="button" for="click">
            <a class="button_theme">Edit Profile</a>
        </label>

        <div class="final_container">
            <div class="inside">
                <h1>Complete Your Profile here...</h1>

                <form action="" method="post">

                    <div class="basic_info">
                        <!-- Starts here -->
                        <div class="first">
                            <label for="fullname">
                                <h2>Name:</h2>
                                <input type="text" name="fullname" placeholder="Fullname" id="fullname " required>
                            </label>
                            <label for="email">
                                <h2>Email:</h2>
                                <input type="email" placeholder="example.com" name="email" id="email" required>
                            </label>
                            <label for="phone">
                                <h2>Phone:</h2>
                                <input type="number" placeholder="XXXXXXXXXXX" name="phone" id="phone" required>
                            </label>

                            <label for="">

                                <label for="male">

                                    <input type="radio" value="Male" name="gender" id="male">
                                    <h2>Male</h2>
                                </label>
                                <label for="female">
                                    <input type="radio" value="Female" name="gender" id="female">
                                    <h2>Female</h2>
                                </label>
                            </label>
                            <label for="address">
                                <h2>Address:</h2>
                                <textarea name="address" id="address" cols="50" rows="3" required></textarea>
                            </label>

                            <label for="Work">
                                <h2>Work:</h2>
                                <input type="text" name="work" id="work" placeholder="Optional">
                            </label>

                            <label for="DOB">
                                <h2>Birthday:</h2>
                                <input type="date" name="DOB" id="DOB">
                            </label>

                            <label for="location">
                                <h2>Location:</h2>
                                <input type="text" name="location" id="location">
                            </label>
                            <label for="passion">
                                <h2>Passion:</h2>
                                <input type="text" name="passion" id="passion">
                            </label>


                            <label class="Profile-cross" for="click">
                                <button type="submit" class="button_submit">Save</button>
                                <br>
                                <br>

                                <i class="fi fi-bs-cross"></i>
                            </label>


                        </div>

                    </div>
                </form>


            </div>
        </div>

        <div class="overlay"> </div>
        <div class="button_arrow"></div>


    </div>




    <main class="Container">

        <!-- This is for Logo  -->
        <section class="sect-1">
            <div class="logo-box">
                <figure class="Banner">
