                </figure>


                <ul class="social-links">
                    <li><a href="Home.html">Home</a></li>
                    <li><a href="Explore.html">Explore</a></li>
                    <li><a href="About.html">About</a></li>
                    <li><a href="/logout">Logout</a></li>
                    <li><a href=""> Premium</a></li>


                </ul>


                <ul class="social-links">
                    <li><i class="fi fi-brands-twitter"></i></li>
                    <li><i class="fi fi-brands-instagram"></i></li>
                    <li><i class="fi fi-brands-facebook"></i></li>
                    <li><i class="fi fi-brands-linkedin"></i></li>
                </ul>
            </div>
        </section>


        <!-- USER PROFILE -->
        <section class="sect-2">
            <div class="profile-box">
                <label for="profile" class="profile">
                    <form id="uploadForm" action="/uploadImg" method="post" enctype="multipart/form-data">
                        <!-- //now here the Form will be Automatically Submited when the File is Uploaded -->
                        <input type="file" id="profile" name="ProfileImg" accept="image/*" onchange="autoSubmit()"
